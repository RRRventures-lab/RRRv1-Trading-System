# Mem0 AI Memory System Configuration
# For RRRv1 Autonomous Trading System

# ============================================================================
# Mem0 API Configuration
# ============================================================================

# Your Mem0 API Key
# Get your API key from: https://app.mem0.ai/
# Replace the example key with your actual key
M0_API_KEY=m0-d4EySFOATClbepSX78BI1Rk2WfcWQ1OOtRjRuBPX

# Mem0 API Base URL (usually doesn't need to be changed)
M0_API_URL=https://api.mem0.ai/v1

# ============================================================================
# Memory System Settings
# ============================================================================

# Enable Mem0 Memory System
MEM0_ENABLED=true

# Enable local memory fallback (if Mem0 API is unavailable)
MEM0_LOCAL_FALLBACK=true

# Memory storage location for local fallback
MEM0_LOCAL_STORAGE_PATH=./data/memory/

# ============================================================================
# Memory Categories Configuration
# ============================================================================

# Store User Preferences
MEM0_STORE_USER_PREFERENCES=true

# Store Market Conditions Analysis
MEM0_STORE_MARKET_CONDITIONS=true

# Store Strategy Performance Data
MEM0_STORE_STRATEGY_PERFORMANCE=true

# Store Risk Profile Insights
MEM0_STORE_RISK_PROFILE=true

# Store Portfolio Pattern Analysis
MEM0_STORE_PORTFOLIO_PATTERNS=true

# Store Learning Insights
MEM0_STORE_LEARNING_INSIGHTS=true

# ============================================================================
# Memory Retention Settings
# ============================================================================

# Number of trade memories to retain
MEM0_MAX_TRADE_MEMORIES=1000

# Number of market condition memories to retain
MEM0_MAX_MARKET_MEMORIES=500

# Number of risk event memories to retain
MEM0_MAX_RISK_MEMORIES=200

# Memory retention period in days (0 = infinite)
MEM0_RETENTION_DAYS=90

# ============================================================================
# Learning and Analysis Settings
# ============================================================================

# Enable automatic strategy analysis from memories
MEM0_AUTO_STRATEGY_ANALYSIS=true

# Enable automatic market pattern recognition
MEM0_AUTO_PATTERN_RECOGNITION=true

# Enable automatic risk learning
MEM0_AUTO_RISK_LEARNING=true

# Minimum number of trades before generating insights
MEM0_MIN_TRADES_FOR_INSIGHTS=20

# ============================================================================
# Integration Settings
# ============================================================================

# Sync memories with trading agent (frequency in seconds)
MEM0_SYNC_INTERVAL=300

# Enable webhook for real-time memory updates
MEM0_ENABLE_WEBHOOKS=false

# Webhook URL (if enabled)
MEM0_WEBHOOK_URL=

# Enable memory versioning and history
MEM0_ENABLE_VERSIONING=true

# ============================================================================
# Logging and Monitoring
# ============================================================================

# Memory system logging level (DEBUG, INFO, WARNING, ERROR)
MEM0_LOG_LEVEL=INFO

# Enable detailed memory operation logging
MEM0_DETAILED_LOGGING=false

# Enable performance metrics for memory operations
MEM0_ENABLE_METRICS=true

# ============================================================================
# Advanced Settings
# ============================================================================

# Max concurrent API calls to Mem0
MEM0_MAX_CONCURRENT_CALLS=10

# Request timeout in seconds
MEM0_REQUEST_TIMEOUT=30

# Number of retries for failed requests
MEM0_MAX_RETRIES=3

# Retry backoff multiplier
MEM0_RETRY_BACKOFF=2.0

# ============================================================================
# Notes
# ============================================================================

# To get a Mem0 API key:
# 1. Visit https://app.mem0.ai/
# 2. Sign up or log in
# 3. Go to Settings > API Keys
# 4. Create a new API key
# 5. Copy the key and paste it as M0_API_KEY

# For Docker deployments:
# Pass these variables using -e flag:
# docker run -e M0_API_KEY="your-key" rrr-trading-system

# For Railway deployments:
# Add these variables to your project's environment variables
